<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="@drawable/degradado_color"
                android:gravity="center"
                android:text="Recarga Fácil"
                android:textColor="#ffffff"
                android:textSize="40sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                tools:context=".MainActivity">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="204dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="Hola David!..."
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="0dp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="183dp"
                    android:layout_height="68dp"
                    app:srcCompat="@drawable/logo" />

            </LinearLayout>

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="wrap_content"
                android:layout_height="550px"
                android:layout_marginTop="20dp"
                android:clickable="true"
                app:layout_constraintTop_toTopOf="@+id/webView"
                tools:layout_editor_absoluteX="-1dp" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Ingrese su celular"
                android:inputType="phone"
                android:maxLength="8"
                android:maxLines="1"
                tools:layout_editor_absoluteX="0dp" />

            <EditText
                android:id="@+id/editTextTextEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Ingrese su email"
                android:inputType="textEmailAddress"
                tools:layout_editor_absoluteX="0dp" />

            <EditText
                android:id="@+id/editTextTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Ingrese su hora"
                android:inputType="time"
                tools:layout_editor_absoluteX="0dp" />

            <EditText
                android:id="@+id/editTextDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Ingrese su fecha"
                android:inputType="date"
                tools:layout_editor_absoluteX="0dp" />

            <EditText
                android:id="@+id/dateEditTextDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:hint="Selecciona una fecha" />

            <EditText
                android:id="@+id/numberEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Ingresa números enteros positivos" />

            <Button
                android:id="@+id/enviar"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:text="@string/enviar"
                android:textColor="#ffff"
                android:background="@drawable/degradado_color"
                app:backgroundTint="@null"
                />

            <Button
                android:id="@+id/degradado"
                android:text="@string/boton_con_redondeado"
                app:cornerRadius="15dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeWidth="4dp"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/contorno"
                android:text="@string/contorno"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                tools:context=".MainActivity">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:cornerRadius="15dp"
                    tools:srcCompat="@drawable/logo" />

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    tools:context=".MainActivity">

                    <Button
                        android:id="@+id/miBoton"
                        android:text="Mi Botón"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:padding="10dp"
                        android:background="#4CAF50"
                        android:textColor="@color/black"
                        app:strokeWidth="3dp"
                        app:backgroundTint="@null"
                        app:cornerRadius="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:id="@+id/miBoton2"
                        android:text="Mi Botón"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:padding="10dp"
                        android:textColor="#fff"
                        app:strokeWidth="3dp"
                        app:backgroundTint="#5C349E"
                        app:cornerRadius="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>