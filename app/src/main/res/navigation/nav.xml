<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/screenSplashFragment">
    <fragment
        android:id="@+id/screenSplashFragment"
        android:name="com.example.componentes.ScreenSplashFragment"
        android:label="fragment_screen_splash"
        tools:layout="@layout/fragment_screen_splash" >
        <action
            android:id="@+id/action_screenSplashFragment_to_homeFragmentScreen"
            app:destination="@id/homeFragmentScreen" />
    </fragment>
    <fragment
        android:id="@+id/homeFragmentScreen"
        android:name="com.example.componentes.HomeFragmentScreen"
        android:label="fragment_home_screen"
        tools:layout="@layout/fragment_home_screen" >
        <action
            android:id="@+id/action_homeFragmentScreen_to_productosFragmentScreen"
            app:destination="@id/productosFragmentScreen" />
        <action
            android:id="@+id/action_homeFragmentScreen_to_playFragmentScreen"
            app:destination="@id/playFragmentScreen" />
    </fragment>
    <fragment
        android:id="@+id/productosFragmentScreen"
        android:name="com.example.componentes.ProductosFragmentScreen"
        android:label="fragment_productos_screen"
        tools:layout="@layout/fragment_productos_screen" />
    <fragment
        android:id="@+id/playFragmentScreen"
        android:name="com.example.componentes.PlayFragmentScreen"
        android:label="fragment_play_screen"
        tools:layout="@layout/fragment_play_screen" />
</navigation>